# Configuración de la base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=snack_party
DB_PORT=3306

# Configuración del servidor
PORT=3001
NODE_ENV=development

# JWT Secret para autenticación
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# Configuración de CORS
CORS_ORIGIN=http://localhost:5173

# Email: Preferido Resend (recomendado para Railway)
# Genera tu API Key en resend.com y configura el dominio/remitente
RESEND_API_KEY=
# Dirección de remitente verificada en Resend. Ej: "Snack Party <no-reply@tu-dominio.com>"
RESEND_FROM=

# Email: Fallback SMTP (opcional, si no usas Resend)
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_contraseña_de_aplicacion
ADMIN_EMAIL=admin@snackparty.com

# Opcional: conexión SMTP avanzada (por defecto Gmail)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=465
# EMAIL_SECURE=true            # true para 465 (SSL), false para 587 (STARTTLS)
# EMAIL_REQUIRE_TLS=false      # true fuerza STARTTLS en puertos no seguros
# EMAIL_CONNECTION_TIMEOUT=15000
# EMAIL_GREETING_TIMEOUT=15000
# EMAIL_SOCKET_TIMEOUT=20000
# EMAIL_POOL=false
# EMAIL_POOL_MAX=1
# EMAIL_DEBUG=false
# EMAIL_TLS_REJECT_UNAUTHORIZED=true
# EMAIL_FROM=Snack Party <tu_email@gmail.com>

# Configuración de Cloudinary
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

